---
import BaseLayout from './BaseLayout.astro';
import { formatDateRange } from '@lib/utils';

export interface Props {
  title: string;
  eventDate: Date;
  eventEndDate?: Date;
  location: string;
  registrationUrl?: string;
  capacity?: number;
  status: 'upcoming' | 'past';
  tags: string[];
  speakers?: Array<{ name: string; bio: string; avatar?: string }>;
  featuredImage?: string;
}

const {
  title,
  eventDate,
  eventEndDate,
  location,
  registrationUrl,
  capacity,
  status,
  tags,
  speakers,
  featuredImage,
} = Astro.props;
---

<BaseLayout title={title} image={featuredImage}>
  <article class="container mx-auto px-4 py-16 max-w-4xl">
    <header class="mb-12">
      <div class="mb-6">
        <span
          class:list={[
            'inline-block px-3 py-1 rounded-full text-sm font-medium',
            status === 'upcoming'
              ? 'bg-accent-gold/10 text-accent-gold'
              : 'bg-primary-indigo/10 text-primary-indigo'
          ]}
        >
          {status === 'upcoming' ? 'Upcoming Experience' : 'Past Experience'}
        </span>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary-indigo mb-6">
        {title}
      </h1>

      <div class="flex flex-wrap gap-6 text-sm text-primary-indigo/70 mb-6">
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <time datetime={eventDate.toISOString()}>
            {formatDateRange(eventDate, eventEndDate)}
          </time>
        </div>
        <div class="flex items-center gap-2">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{location}</span>
        </div>
        {capacity && (
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span>Capacity: {capacity}</span>
          </div>
        )}
      </div>

      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-6">
          {tags.map((tag) => (
            <span class="inline-block bg-primary-cyan/10 text-primary-cyan px-3 py-1 rounded-full text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>
      )}

      {status === 'upcoming' && registrationUrl && (
        <a
          href={registrationUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-primary-cyan text-white px-8 py-3 rounded-lg font-semibold hover:bg-accent-magenta transition-colors"
        >
          Register Now
        </a>
      )}
    </header>

    {featuredImage && (
      <div class="mb-12 rounded-lg overflow-hidden">
        <img
          src={featuredImage}
          alt={title}
          class="w-full h-auto"
        />
      </div>
    )}

    <div class="prose prose-lg max-w-none mb-12">
      <slot />
    </div>

    {speakers && speakers.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-primary-indigo mb-6">Speakers</h2>
        <div class="grid gap-6 md:grid-cols-2">
          {speakers.map((speaker) => (
            <div class="flex gap-4">
              {speaker.avatar && (
                <img
                  src={speaker.avatar}
                  alt={speaker.name}
                  class="h-16 w-16 rounded-full object-cover"
                />
              )}
              <div>
                <h3 class="font-semibold text-primary-indigo">{speaker.name}</h3>
                <p class="text-sm text-primary-indigo/70 mt-1">{speaker.bio}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <footer class="mt-12 pt-8 border-t border-primary-indigo/10">
      <a
        href="/events"
        class="text-sm font-medium text-primary-cyan hover:text-accent-magenta transition-colors"
      >
        ‚Üê Back to Experiences
      </a>
    </footer>
  </article>
</BaseLayout>
