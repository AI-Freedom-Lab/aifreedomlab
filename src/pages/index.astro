---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';
import BlogCard from '@components/blog/BlogCard.astro';
import EventCard from '@components/events/EventCard.astro';
import { getCollection } from 'astro:content';
import { sortByDate } from '@lib/utils';

// Get featured blog posts (latest 3)
const allBlogPosts = await getCollection('blog', ({ data }) => !data.draft);
const featuredPosts = sortByDate(allBlogPosts).slice(0, 3);

// Get upcoming events
const allEvents = await getCollection('events', ({ data }) => data.status === 'upcoming');
const upcomingEvents = sortByDate(allEvents).slice(0, 3);
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative bg-primary-black text-white overflow-hidden">
    <!-- Cyan radial glow â€” brand energy -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_0%,_rgba(0,229,255,0.12),transparent_60%)]"></div>
    </div>

    <div class="container mx-auto px-4 py-24 md:py-36 relative z-10">
      <div class="max-w-5xl mx-auto text-center">
        <p class="font-display text-5xl md:text-6xl lg:text-7xl font-black mb-3 tracking-tight whitespace-nowrap text-white">
          Build on your own terms.
        </p>
        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-black mb-10 tracking-tight whitespace-nowrap text-primary-cyan">
          Coming Soon
        </h1>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-10">
          <Button href="https://luma.com/user/aifreedomlab" variant="primary" size="lg" target="_blank" rel="noopener noreferrer">
            Attend an Experience
          </Button>
        </div>
        <p class="font-sans text-base md:text-lg text-white/70 max-w-2xl mx-auto">
          Curious about AI? There's a place for you in the AI Freedom Lab community.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission Statement - Hidden for Coming Soon -->
