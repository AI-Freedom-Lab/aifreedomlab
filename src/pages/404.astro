---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';
---

<BaseLayout title="Page Not Found">
  <div class="container mx-auto px-4 py-24 text-center">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-6xl md:text-7xl font-bold text-primary-indigo mb-6">404</h1>
      <h2 class="text-3xl md:text-4xl font-bold text-primary-indigo mb-6">
        Page Not Found
      </h2>
      <p class="text-lg text-primary-indigo/70 mb-8">
        Looks like this page doesn't exist. Maybe it's time to build it?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/" variant="primary" size="lg">
          Go Home
        </Button>
        <Button href="/events" variant="outline" size="lg">
          View Experiences
        </Button>
      </div>
    </div>
  </div>
</BaseLayout>
