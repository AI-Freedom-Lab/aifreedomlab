---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';
---

<BaseLayout
  title="Experiences"
  description="Hackathons, workshops, and community gatherings. Build on your own terms."
>
  <!-- Hero -->
  <section class="relative bg-primary-black text-white overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_50%_0%,_rgba(0,229,255,0.10),transparent_60%)]"></div>
    </div>
    <div class="container mx-auto px-4 py-20 md:py-28 relative z-10 text-center">
      <h1 class="font-display font-black text-5xl md:text-6xl lg:text-7xl tracking-tight text-white mb-6">
        Experiences
      </h1>
      <p class="font-sans text-base md:text-lg text-white/70 max-w-2xl mx-auto mb-10">
        Hackathons, workshops, and community gatherings for builders who want to own their AI.
      </p>
      <Button href="https://luma.com/user/aifreedomlab" variant="primary" size="lg" target="_blank" rel="noopener noreferrer">
        Join an Experience
      </Button>
    </div>
  </section>
</BaseLayout>
